<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/common_cyan</item>
        <item name="android:autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="colorControlNormal">@color/color_edit_text_background_line</item>
        <item name="colorControlActivated">@color/color_primary_light</item>
        <item name="colorControlHighlight">@color/color_primary_light</item>
        <item name="actionBarItemBackground">@drawable/header_btn</item>
        <item name="selectableItemBackground">@drawable/header_btn</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@color/color_background</item>
    </style>

    <style name="MaterialEditText">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/color_background</item>
    </style>
</resources>