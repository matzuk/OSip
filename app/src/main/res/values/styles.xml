<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/toolbar_color_primary</item>
        <item name="colorPrimaryDark">@color/toolbar_color_primary_dark</item>
        <item name="android:autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="colorControlNormal">@color/edit_text_background_line_color</item>
        <item name="colorControlActivated">@color/material_blue_color</item>
        <item name="colorControlHighlight">@color/material_blue_color</item>
        <item name="actionBarItemBackground">@drawable/header_btn</item>
        <item name="selectableItemBackground">@drawable/header_btn</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@android:color/white</item>
    </style>

    <style name="MaterialEditText">
        <item name="android:textSize">24sp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>