<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_translate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/size_small"
    android:paddingTop="@dimen/size_small"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <com.tg.osip.ui.general.views.images.PhotoView
        android:id="@+id/avatar"
        android:layout_width="@dimen/size_xxxlarge"
        android:layout_height="@dimen/size_xxxlarge"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_padding_common"
        android:layout_marginRight="@dimen/size_padding_common"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat_group_icon"
            android:layout_width="@dimen/size_medium"
            android:layout_height="@dimen/size_medium"
            android:layout_marginTop="@dimen/size_xsmall"
            android:src="@drawable/ic_group"
            android:layout_marginRight="@dimen/size_small"
            android:layout_marginEnd="@dimen/size_small"/>

        <TextView
            android:id="@+id/chat_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium_plus"
            android:textColor="@color/color_text_primary"
            android:text="Username"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:ellipsize="end" />
    </LinearLayout>

    <TextView
        android:id="@+id/chat_user_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_padding_common"
        android:layout_marginRight="@dimen/size_padding_common"
        android:layout_marginTop="@dimen/size_xxsmall"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/color_text_secondary"
        android:text="user"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:ellipsize="end"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_xsmall"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat_unread_outbox_messages"
            android:layout_width="@dimen/size_small_plus_half"
            android:layout_height="@dimen/size_small_plus_half"
            android:layout_marginTop="@dimen/size_xsmall"
            android:src="@drawable/ic_not_read"
            android:layout_marginRight="@dimen/size_small"
            android:layout_marginEnd="@dimen/size_small"/>

        <TextView
            android:id="@+id/message_sending_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/color_text_secondary"
            android:text="12:05 PM"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:ellipsize="end"/>
    </LinearLayout>

    <TextView
        android:id="@+id/chat_unread_messages_count"
        android:layout_width="@dimen/size_medium_plus"
        android:layout_height="@dimen/size_medium_plus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/size_xsmall"
        android:gravity="center"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/color_background"
        android:background="@drawable/ic_badge"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:ellipsize="end"/>

</RelativeLayout>