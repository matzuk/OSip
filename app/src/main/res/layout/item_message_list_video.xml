<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:res="http://schemas.android.com/apk/res-auto"
    android:id="@+id/photo_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/message_padding_top_bottom"
    android:paddingTop="@dimen/message_padding_top_bottom"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <com.tg.osip.ui.general.views.images.PhotoView
        android:id="@+id/avatar"
        android:layout_width="@dimen/message_avatar_size"
        android:layout_height="@dimen/message_avatar_size"
        android:layout_marginTop="@dimen/size_xsmall"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_yylarge"
        android:layout_marginStart="@dimen/size_yylarge"
        android:textSize="@dimen/message_name_text_size"
        android:textColor="@color/color_primary_dark"
        android:text="Username"
        android:singleLine="true"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/message_sending_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_small"
        android:layout_toRightOf="@+id/message_name"
        android:layout_toEndOf="@+id/message_name"
        android:layout_alignBottom="@+id/message_name"
        android:textSize="@dimen/message_sending_time_text_size"
        android:textColor="@color/color_text_secondary"
        android:text="12:05 PM"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:ellipsize="end" />

    <ImageView
        android:id="@+id/message_unread_outbox"
        android:layout_width="@dimen/size_small_plus_half"
        android:layout_height="@dimen/size_small_plus_half"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/size_xsmall_half"
        android:src="@drawable/ic_not_read"/>

    <FrameLayout
        android:layout_width="@dimen/size_message_photo_width"
        android:layout_height="@dimen/size_message_photo_height"
        android:layout_below="@+id/message_name"
        android:layout_marginTop="@dimen/message_media_content_top_padding"
        android:layout_marginLeft="@dimen/size_yylarge"
        android:layout_marginStart="@dimen/size_yylarge">

        <com.tg.osip.ui.general.views.images.PhotoView
            android:id="@+id/photo"
            android:layout_width="@dimen/size_message_photo_width"
            android:layout_height="@dimen/size_message_photo_height"
            android:scaleType="centerCrop"/>

        <com.tg.osip.ui.general.views.progress_download.ProgressDownloadView
            android:id="@+id/progressDownloadView"
            android:layout_width="@dimen/progress_download_view_size"
            android:layout_height="@dimen/progress_download_view_size"
            android:layout_gravity="center"
            res:type="video"/>

    </FrameLayout>



</RelativeLayout>