<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_translate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/message_padding_top_bottom"
    android:paddingTop="@dimen/message_padding_top_bottom"
    android:paddingLeft="@dimen/message_chat_changing_padding_left_right"
    android:paddingRight="@dimen/message_chat_changing_padding_left_right"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/size_small"
        android:gravity="center"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/color_text_primary"
        android:text="action"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <com.tg.osip.ui.general.views.images.PhotoView
        android:id="@+id/photo"
        android:layout_width="@dimen/message_chat_changing_photo_size"
        android:layout_height="@dimen/message_chat_changing_photo_size"
        android:scaleType="centerCrop"/>

</LinearLayout>